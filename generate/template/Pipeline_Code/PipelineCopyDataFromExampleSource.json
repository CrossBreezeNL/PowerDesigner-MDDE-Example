{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory-naam"
        },
        "ExampleSourceKoppeling": {
            "type": "string"
        },
        "StagingKoppeling": {
            "type": "string"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "[concat(parameters('factoryName'), '/PipelineCopyDataFrom ExampleSource')]",
            "type": "Microsoft.DataFactory/factories/pipelines",
            "apiVersion": "2018-06-01",
            "properties": {
                "activities": [
                    {
                        "name": "Customer - ExampleSourceDB naar StagingDB",
                        "description": "Kopieren van de tabel dbo.Customer",
                        "type": "Copy",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "0.12:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [
                            {
                                "name": "Source",
                                "value": "dbo.Customer"
                            },
                            {
                                "name": "Destination",
                                "value": "dbo.Customer"
                            }
                        ],
                        "typeProperties": {
                            "source": {
                                "type": "AzureSqlSource",
                                "sqlReaderQuery": "SELECT [ID]\n      ,[FIRSTNAME]\n      ,[LASTNAME]\n      ,[CITY]\n      ,[COUNTRY]\n      ,[PHONE]\n      ,CAST(GetDATE() as DATETime) as [CreatedAt]\n  FROM [dbo].[Customer]",
                                "queryTimeout": "02:00:00",
                                "partitionOption": "None"
                            },
                            "sink": {
                                "type": "AzureSqlSink",
                                "preCopyScript": "IF object_ID ('dbo.Customer') IS NOT NULL \nBEGIN\nTRUNCATE TABLE dbo.Customer\nEND",
                                "writeBehavior": "insert",
                                "sqlWriterUseTableLock": false,
                                "tableOption": "autoCreate",
                                "disableMetricsCollection": false
                            },
                            "enableStaging": false,
                            "translator": {
                                "type": "TabularTranslator",
                                "typeConversion": true,
                                "typeConversionSettings": {
                                    "allowDataTruncation": true,
                                    "treatBooleanAsNumber": false
                                }
                            }
                        },
                        "inputs": [
                            {
                                "referenceName": "AzureSqlDB",
                                "type": "DatasetReference",
                                "parameters": {}
                            }
                        ],
                        "outputs": [
                            {
                                "referenceName": "DestinationStaging",
                                "type": "DatasetReference",
                                "parameters": {}
                            }
                        ]
                    }
                ],
                "policy": {
                    "elapsedTimeMetric": {}
                },
                "annotations": [],
                "lastPublishTime": "2024-09-26T14:55:06Z"
            },
            "dependsOn": [
                "[concat(variables('factoryId'), '/datasets/AzureSqlDB')]",
                "[concat(variables('factoryId'), '/datasets/DestinationStaging')]"
            ]
        },
        {
            "name": "[concat(parameters('factoryName'), '/AzureSqlDB')]",
            "type": "Microsoft.DataFactory/factories/datasets",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "[parameters('ExampleSourceKoppeling')]",
                    "type": "LinkedServiceReference"
                },
                "annotations": [],
                "type": "AzureSqlTable",
                "schema": [
                    {
                        "name": "ID",
                        "type": "int",
                        "precision": 10
                    },
                    {
                        "name": "FIRSTNAME",
                        "type": "varchar"
                    },
                    {
                        "name": "LASTNAME",
                        "type": "varchar"
                    },
                    {
                        "name": "CITY",
                        "type": "varchar"
                    },
                    {
                        "name": "COUNTRY",
                        "type": "varchar"
                    },
                    {
                        "name": "PHONE",
                        "type": "varchar"
                    }
                ],
                "typeProperties": {
                    "schema": "dbo",
                    "table": "Customer"
                }
            },
            "dependsOn": []
        },
        {
            "name": "[concat(parameters('factoryName'), '/DestinationStaging')]",
            "type": "Microsoft.DataFactory/factories/datasets",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "[parameters('StagingKoppeling')]",
                    "type": "LinkedServiceReference"
                },
                "annotations": [],
                "type": "AzureSqlTable",
                "schema": [],
                "typeProperties": {
                    "schema": "dbo",
                    "table": "Customer"
                }
            },
            "dependsOn": []
        }
    ]
}