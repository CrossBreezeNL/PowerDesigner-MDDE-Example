<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<root>
  <name>KopieerData</name>
  <type>Copy</type>
  <policy>
    <timeout>0.12:00:00</timeout>
    <retry>0</retry>
    <retryIntervalInSeconds>30</retryIntervalInSeconds>
    <secureOutput>false</secureOutput>
    <secureInput>false</secureInput>
  </policy>
  <typeProperties>
    <source>
      <type>AzureSqlSource</type>
      <sqlReaderQuery>SELECT [AttributeName]
      ,CAST(GetDATE() as DATETime) as [CreatedAt]
  FROM [dbo].[SourceTableName]</sqlReaderQuery>
      <queryTimeout>02:00:00</queryTimeout>
      <partitionOption>None</partitionOption>
    </source>
    <sink>
      <type>AzureSqlSink</type>
      <preCopyScript>IF object_ID ('dbo.SOURCETABLENAME') IS NOT NULL 
BEGIN
TRUNCATE TABLE dbo.SOURCETABLENAME
END</preCopyScript>
      <writeBehavior>insert</writeBehavior>
      <sqlWriterUseTableLock>false</sqlWriterUseTableLock>
      <tableOption>autoCreate</tableOption>
      <disableMetricsCollection>false</disableMetricsCollection>
    </sink>
    <enableStaging>false</enableStaging>
    <translator>
      <type>TabularTranslator</type>
      <typeConversion>true</typeConversion>
      <typeConversionSettings>
        <allowDataTruncation>true</allowDataTruncation>
        <treatBooleanAsNumber>false</treatBooleanAsNumber>
      </typeConversionSettings>
    </translator>
  </typeProperties>
  <inputs>
    <referenceName>SourceDatabaseName</referenceName>
    <type>DatasetReference</type>
  </inputs>
  <outputs>
    <referenceName>SourceDatabaseName</referenceName>
    <type>DatasetReference</type>
  </outputs>
</root>