{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory-naam"
        },
        "sourceLinkedService": {
            "type": "string",
            "metadata": "Linked service for the source"
        },
        "destinationLinkedService": {
            "type": "string",
            "metadata": "Linked service for the destination"
        },
        "sourceTableName": {
            "type": "string",
            "metadata": "Source table name"
        },
        "destinationTableName": {
            "type": "string",
            "metadata": "Destination table name"
        },
        "sourceSQLQuery": {
            "type": "string",
            "metadata": "SQL query to get the data of the source"
        },
        "preCopyScript": {
            "type": "string",
            "metadata": "Script that is executed before the copying in the sink takes place (for example TRUNCATE TABLE)"
        },
        "sourceType": {
            "type": "string",
            "metadata": "The type of source where the data is copied from"
        },
        "sinkType": {
            "type": "string",
            "metadata": "The type of sink where the data is copied to"
        },
        "sourceSchema": {
            "type": "string",
            "metadata": "The schema of the source"
        },
        "sinkSchema": {
            "type": "string",
            "metadata": "The schema of the sink"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "[concat(parameters('factoryName'), '/PipelineCopyDataFrom')]",
            "type": "Microsoft.DataFactory/factories/pipelines",
            "apiVersion": "2018-06-01",
            "properties": {
                "activities": [
                    {
                        "name": "Copy Data Activity",
                        "description": "[concat('Copy data from table ', parameters('sourceTableName'), ' to ', parameters('destinationTableName))]",
                        "type": "Copy",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "0.12:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [
                            {
                                "name": "Source",
                                "value": "[parameters('sourceTableName')]"
                            },
                            {
                                "name": "Destination",
                                "value": "[parameters('destinationTableName')]"
                            }
                        ],
                        "typeProperties": {
                            "source": {
                                "type": "[parameters('sourceType')]",
                                "sqlReaderQuery": "[concat(parameters('sourceSQLQuery'), ', CAST(GetDATE() as DATETIME) as [CreatedAt]')]",
                                "queryTimeout": "02:00:00",
                                "partitionOption": "None",
                                "metadata": "The sourceSQLQuery has a standard extra column CreatedAt to keep a timestamp"
                            },
                            "sink": {
                                "type": "[parameters('sinkType')]",
                                "preCopyScript": "[concat('IF object_ID (''', parameters('sinkSchema'), '.', parameters('sinkTableName'), ''') IS NOT NULL \nBEGIN\nTRUNCATE TABLE ', parameters('sinkSchema'), '.', parameters('sinkTableName'), '\nEND')]",
                                "writeBehavior": "insert",
                                "sqlWriterUseTableLock": false,
                                "tableOption": "autoCreate",
                                "disableMetricsCollection": false
                            },
                            "enableStaging": false,
                            "translator": {
                                "type": "TabularTranslator",
                                "typeConversion": true,
                                "typeConversionSettings": {
                                    "allowDataTruncation": true,
                                    "treatBooleanAsNumber": false
                                }
                            }
                        },
                        "inputs": [
                            {
                                "referenceName": "[concat(parameters('factoryName'), '/sourceDataset')]",
                                "type": "DatasetReference",
                                "parameters": {}
                            }
                        ],
                        "outputs": [
                            {
                                "referenceName": "[concat(parameters('factoryName'), '/destinationDataset')]",
                                "type": "DatasetReference",
                                "parameters": {}
                            }
                        ]
                    }
                ],
                "policy": {
                    "elapsedTimeMetric": {}
                },
                "annotations": [],
                "lastPublishTime": "2024-09-26T14:55:06Z"
            },
            "dependsOn": [
                "[concat(variables('factoryId'), '/datasets/sourceDataset')]",
                "[concat(variables('factoryId'), '/datasets/destinationDataset')]"
            ]
        },
        {
            "name": "[concat(parameters('factoryName'), '/sourceDataset')]",
            "type": "Microsoft.DataFactory/factories/datasets",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "[parameters('sourceLinkedService')]",
                    "type": "LinkedServiceReference"
                },
                "annotations": [],
                "type": "AzureSqlTable",
                "schema": [],
                "typeProperties": {
                    "schema": "[parameters('sourceSchema')]",
                    "table": "[parameters('sourceTableName')]"
                }
            },
            "dependsOn": []
        },
        {
            "name": "[concat(parameters('factoryName'), '/destinationDataset')]",
            "type": "Microsoft.DataFactory/factories/datasets",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "[parameters('destinationLinkedService')]",
                    "type": "LinkedServiceReference"
                },
                "annotations": [],
                "type": "AzureSqlTable",
                "schema": [],
                "typeProperties": {
                    "schema": "[parameters('sinkSchema')]",
                    "table": "[parameters('sinkTableName')]"
                }
            },
            "dependsOn": []
        }
    ]
}