<?xml version="1.0" encoding="UTF-8"?>
<XGenConfig>
    <Model  />

    <TextTemplate rootSectionName="Table">
        <FileFormat commentNodeXPath="@XGAnnotation" />
        <Output type="output_per_element" />
        <TextSections>
          <TextSection name="Column" begin="[Column_Code]" end="," />
        </TextSections>
    </TextTemplate>

    <Binding>
        <SectionModelBinding section="Table" modelXPath="/Database/Schemas/Schema/Tables/Table">
            <Placeholders>
                <Placeholder name="Database" modelXPath="/Database" />
            </Placeholders>
            <SectionModelBinding section="Column" modelXPath="Columns/Column" />
        </SectionModelBinding>
    </Binding>
</XGenConfig>